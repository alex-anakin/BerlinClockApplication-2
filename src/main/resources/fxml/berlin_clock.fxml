<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" styleClass="root" vgap="10"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8"
          fx:controller="ua.anakin.controller.BerlinClockController"
          fx:id="gridPane">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>

    <children>
        <HBox fx:id="secondLine" alignment="BASELINE_CENTER" spacing="10" GridPane.columnIndex="0"
              GridPane.columnSpan="4" GridPane.rowIndex="0"/>

        <HBox fx:id="fiveHoursLine" spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="1"/>

        <HBox fx:id="oneHoursLine" spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="2"/>

        <HBox fx:id="fiveMinuteLine" spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="3"/>

        <HBox fx:id="oneMinuteLine" spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="4"/>

        <HBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="6">
            <children>
                <Button onAction="#handleCloseButtonAction" text="Close" />
            </children>
        </HBox>
    </children>

</GridPane>
